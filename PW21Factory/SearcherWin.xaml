<Window x:Class="PW21Factory.SearcherWin"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:PW21Factory"
        mc:Ignorable="d"
        Title="SearcherWin" MinWidth="200" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" FontSize="12" SizeToContent="WidthAndHeight" Activated="Window_Activated" Loaded="Window_Loaded">
    <DockPanel>
        <GroupBox DockPanel.Dock="Bottom">
            <GroupBox.Header>
                <Label Content="Поиск детали" />
            </GroupBox.Header>
            <StackPanel>
                <Label Content="Имя детали"/>
                <TextBox x:Name="FindVal" MaxLength="50" Margin="3"/>
                <Button  x:Name="Find" Content="_Найти" Click="Find_Click" Margin="3" IsDefault="True"/>
            </StackPanel>
        </GroupBox>
        <Button IsCancel="True" Visibility="Hidden"/>
    </DockPanel>
</Window>
